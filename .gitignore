# Ignore bundler config
/.bundle
/vendor/bundle

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
*.log

# Ignore database files
/db/*.sqlite3
/db/*.sqlite3-*
/db/*.sqlite3-journal

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Ignore master key for decrypting credentials
/config/master.key
/config/credentials/*.key

# Ignore node_modules
/node_modules

# Ignore test coverage
/coverage

# Ignore environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Ignore bootsnap cache
/tmp/cache/bootsnap/

# Ignore other temporary files
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# Ignore secret files
/tmp/local_secret.txt
